{% extends 'DevschoolCinemaBundle::layout.html.twig' %}

{% block title %}{{ realisateur.nom }}{% endblock %}

{% block body %}
    <div class="col-md-3">
        <p class="lead">{{ titre }}</p>
        <div class="list-group">
            <a href="{{ path('page_films') }}" class="list-group-item active">Films</a>
            <a href="{{ path('page_realisateurs') }}" class="list-group-item">Réalisateurs</a>
        </div>
    </div>
    <div class="col-md-9">
        <h2>Les films de {{ realisateur.nom }}</h2>


        <br />

        {% for film in realisateur.films %}
            <div class="thumbnail">
                <div class="caption-full">
                    <h4 class="pull-right">{{ film.genre.nom }}</h4>
                    <h4>{{ film.titre }}</h4>
                    <p>{{ film.synopsis }}</p>
                </div>
                <div class="ratings">
                    <p class="pull-right">sorti le {{ film.dateSortie|date('d/m/Y') }}</p>
                    <p>Réalisé par : <a href="cinema-films-realisateur.html">{{ film.realisateur.nom }}</a></p>
                </div>
            </div>
        {% endfor %}

    </div>

    <p><a href="{{ path('page_films') }}">Retour</a></p>
{% endblock %}